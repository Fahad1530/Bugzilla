<div class="container">
 <div class="row">
 <table class="table table-striped table-bordered table-hover">
  <thead class="thead-dark">
      <th>Project Users</th>
      <th></th>
      <th></th>
  </thead>

  <tbody>
    <% @users.each do |user| %>
     <% if user.role == 'developer' || user.role == 'qa' %>

      <tr>
        <td>
         <%=  user.name   %>
        </td>

        <td>
         <%=  user.role   %>
        </td>

        <td>

        <%= link_to 'Remove', class:"btn btn-dark" %>

      </tr>
    <% end %>
    <% end %>
  </tbody>
 </table>


<table class="table table-striped table-bordered table-hover">
  <thead class="thead-light">
      <th>Other Users</th>
      <th></th>
      <th></th>
  </thead>

  <tbody>
    <% @all_users.each do |user| %>
     <% if user.role == 'developer' || user.role == 'qa' %>

      <tr>
        <td>
         <%=  user.name   %>
        </td>

        <td>
         <%=  user.role   %>
        </td>

        <td>

       <%= link_to 'Add Users', add_users_projects_path(project.id), class:"btn btn-dark" %>

      </tr>
    <% end %>
    <% end %>
  </tbody>
 </table>


 </div>
</div>
