<div class="container">
  <%=flash[:project]%>
  <div class="row">
    <table class="table table-striped table-bordered table-hover">
      <thead class="thead-dark">
        <th>Project Users</th>
        <th></th>
        <th></th>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <% if user.role=='developer' || user.role=='qa' %>
            <tr id='removed_user-<%= user.id %>'>
              <td>
                <%=user.name %>
              </td>
              <td>
                <%=user.role %>
              </td>
              <td>
                <%=link_to 'Remove', remove_users_project_path(@project, user_id: user.id), remote: true %>
              </tr>
            <% end %>
          <% end %>
        </tbody>
      </table>
      <table class="table table-striped table-bordered table-hover">
        <thead class="thead-dark">
          <th>Other Users</th>
          <th></th>
          <th></th>
        </thead>
        <tbody id="add_user">
          <%= render partial: 'user', locals: { all_users: @all_users } %>
        </tbody>
      </table>
    </div>
  </div>
