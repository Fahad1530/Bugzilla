      <td>
        <%= bug.title %>
      </td>
      <td>
        <%= bug.deadline %>
      </td>
       <td>
        <%= image_tag bug.image, width: '100px' %>
      </td>
      <td>
        <%= image_tag bug.image, width: '100px' %>
      </td>
