
<%= form_with model: @bug, url: project_bugs_path(params[:project_id]), local: true do |form| %>

  <div class="field form-group">
    <%= form.label :title %><br />
    <%= form.text_field :title, autofocus: true,class:"form-control", placeholder:"title", autocomplete: "title" %>
  </div>

  <%# <%= form.hidden_field :creator_id, value: current_user.id %>

   <div class="field form-group">
    <%= form.label :description %><br />
    <%= form.text_field :description, autofocus: true,class:"form-control", placeholder:"description", autocomplete: "description" %>
  </div>

 <div class="field form-group">
    <%= form.label :bug_type %><br />
    <%= form.select :bug_type, options_for_select(Bug.bug_types.map { |key, value| [key.humanize, key] }), {prompt: "Select Type of bug..."}, class: "form-control" %>
  </div>

   <div class="field form-group">
    <%= form.label :deadline %><br />
    <%= form.date_field :deadline, autofocus: true,class:"form-control", placeholder:"deadline", autocomplete: "deadline" %>
  </div>


 <div class="actions">
    <%= form.submit %>
  </div>

<% end %>
